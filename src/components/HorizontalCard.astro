---
const { title, img, desc, p1, p2, p3, badge, tags, url,  github, live , target= "_blank", colab} = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-1">{badge}</div>}
          {github && <a href={github} target={target} class="badge badge-secondary mx-1">github</a>}
          {live && <a href={live} target={target} class="badge badge-secondary mx-1">live</a>}
          {colab && <a href={colab} target={target} class="badge badge-secondary mx-1">colab</a>}
        </h1>
        {desc==="" && <ul class="text-1xl py-1 list-disc ml-6">
          <li>{p1}</li>
          <li>{p2}</li>
          <li>{p3}</li>
        </ul>}
        <p class="py-1 text-1xl">{desc}</p> 
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <a class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
